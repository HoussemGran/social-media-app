<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  
    <title>Profile</title>
</head>
<body>

  
    <%- include('navbar') %>

    <% if(msg) { %>

        <div class="alert alert-warning" style="text-align: center;" role="alert">
            <%=  msg %>
          </div>

    <% }  else { %>
        
        
    <div class="container">
        <div class="row">
          <div class="col-sm">
              
            
           
          </div>
          <div class="col-sm">
            

<%  results.forEach(function(post){ %>
    
    <div class="card" style="width: 30rem;margin-top: 40px;">
        <div class="card-body">
            <h4 class="card-title"> <%= post.username %> </h4>
            <hr>
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"> <%= post.content %> </p>
       
       <a href="/up/<%= post.idPost %>"><button type="button" class="btn btn-outline-primary">UP</button></a> 
       <a href="/post/<%= post.idPost %>"> <button class="btn btn-outline-warning">Update</button></a>
       <a href="/post/delete/<%= post.idPost %>"><button class="btn btn-outline-danger"> Delete </button></a>
       <span class="badge badge-light"> <%= post.up %> </span>
       
        </div>
      </div>
   <% }) %>

          </div>
          <div class="col-sm" style="text-align: center;">
            
          </div>
        </div>
      </div>
 
    <% } %>


</body>
</html>